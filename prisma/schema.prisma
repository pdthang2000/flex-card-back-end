generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Card {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  front           String?
  back            String?
  setCardJunction SetCardJunction[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Set {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  cardCount       Int
  setCardJunction SetCardJunction[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

